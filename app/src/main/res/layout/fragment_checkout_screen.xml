<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.mainfragment.commonscreen.checkoutscreen.CheckoutScreenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageBackIcon"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/back_icon"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Checkout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/relCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@color/grey3"
                android:layout_below="@+id/rlHeader">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"/>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/relSetHomes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relCardView"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/imageHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:tint="@color/orange" />

                <TextView
                    android:id="@+id/tvSetType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:layout_toEndOf="@+id/imageHome"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Set Home"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:id="@+id/tvAddressNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:layout_toEndOf="@+id/imageHome"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_below="@+id/tvSetType"
                    android:text="123 Barn Crescent, 975478"
                    android:textSize="@dimen/_11sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/forward_icon"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewHomes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/greysss"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/relSetHomes"/>

            <RelativeLayout
                android:id="@+id/relSetMeetAtDoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewHomes"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/imageMeet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon_images"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:tint="@color/orange" />

                <TextView
                    android:id="@+id/tvSetDoorStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@+id/imageMeet"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Meet at my door"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:id="@+id/tvDeliveryInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_green"
                    android:layout_toEndOf="@+id/imageMeet"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_below="@+id/tvSetDoorStep"
                    android:text="Add delivery instructions"
                    android:textSize="@dimen/_11sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/forward_icon"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewDoorStep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/greysss"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/relSetMeetAtDoor"/>

            <RelativeLayout
                android:id="@+id/relAddNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewDoorStep"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/imageCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_call"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:tint="@color/orange" />

                <TextView
                    android:id="@+id/tvAddNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_green"
                    android:layout_toEndOf="@+id/imageCall"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Add number"
                    android:textSize="@dimen/_13sdp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/forward_icon"/>

            </RelativeLayout>

            <View
                android:id="@+id/vie"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/greysss"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/relAddNumber" />

            <RelativeLayout
                android:id="@+id/relDeliveryTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/vie">

                <ImageView
                    android:id="@+id/imagesTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:src="@drawable/image_timer"/>

                <TextView
                    android:id="@+id/tvDeliveryTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:layout_toEndOf="@+id/imagesTimer"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Delivery time"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="15-35 min"
                    android:textSize="@dimen/_11sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relStandardTimers"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/line_image_bg"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_below="@+id/relDeliveryTimes">

                <TextView
                    android:id="@+id/tvStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Standard"
                    android:textSize="@dimen/_13sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tvStandard"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/image_standard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:layout_below="@+id/tvStandard"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:text="15-35 min"
                    android:textSize="@dimen/_11sdp"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewStandard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/greysss"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/relStandardTimers" />

            <TextView
                android:id="@+id/tvOrderSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_below="@+id/viewStandard"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Order summary"
                android:textSize="@dimen/_15sdp"/>

            <RelativeLayout
                android:id="@+id/relSuperMarketsItems"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_below="@+id/tvOrderSummary">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageWelmart"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:elevation="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_welmart_super_market"
                    app:shapeAppearanceOverlay="@style/RoundedSquare" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageWelmart"
                    android:layout_marginStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvSuperMarketName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welmart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSuperMarketName"
                        android:text="8 items"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#ADADAD"/>

                    <ImageView
                        android:id="@+id/imageDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drop_down_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="#ADADAD" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relBillingDetailAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relSuperMarketsItems"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/relRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp">

                    <TextView
                        android:id="@+id/textRecipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Subtotal"
                        android:textColor="#4A4A4A" />

                    <TextView
                        android:id="@+id/textSubTotalPrices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="$30"
                        android:textColor="#4A4A4A" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relNetTotalProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relRecipes"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/textTotalProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Bag fee"
                        android:textColor="#4A4A4A" />

                    <TextView
                        android:id="@+id/textBagFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="$0.20"
                        android:textColor="#4A4A4A" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relTax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relNetTotalProduct"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/textTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Tax"
                        android:textColor="#4A4A4A" />

                    <TextView
                        android:id="@+id/textTaxPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="$20"
                        android:textColor="#4A4A4A" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relTax"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/textDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Delivery"
                        android:textColor="#4A4A4A" />

                    <TextView
                        android:id="@+id/textDeliveryPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="$10"
                        android:textColor="#4A4A4A" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relProcessingFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relDelivery"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/textProcessingFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Processing Fee"
                        android:textColor="#4A4A4A" />

                    <TextView
                        android:id="@+id/textProcessingAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="2.9%"
                        android:textColor="#4A4A4A" />

                </RelativeLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:elevation="@dimen/_3sdp"
                android:layout_below="@+id/relBillingDetailAmount">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/relPaymentMethods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPaymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Payment Method"
                            android:textSize="@dimen/_12sdp"/>

                        <ImageView
                            android:id="@+id/imageAmexCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/imageMasterCard"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/amex_payment_icon"/>

                        <ImageView
                            android:id="@+id/imageMasterCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toStartOf="@+id/imageVisaCard"
                            android:src="@drawable/mastercard_payment_icon"/>

                        <ImageView
                            android:id="@+id/imageVisaCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/visa_payment_icon"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relDebitCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_below="@+id/relPaymentMethods">

                        <TextView
                            android:id="@+id/tvDebitCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Debit/Credit Card"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvAddCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/light_green"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Add card"
                            android:textSize="@dimen/_13sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relCardDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_below="@+id/relDebitCreditCard">

                        <ImageView
                            android:id="@+id/idVisaImages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/visa_rounded_image"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/idVisaImages">

                            <TextView
                                android:id="@+id/tvVisaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="visa"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** **** **** 4242"
                                android:textSize="@dimen/_13sdp"
                                android:layout_below="@+id/tvVisaName"
                                android:textColor="@color/black"/>

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/imageCheckRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/radio_uncheck_gray_icon"/>


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcyDebitCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relCardDetails"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <RelativeLayout
                        android:id="@+id/relPayWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_below="@+id/rcyDebitCreditCard">

                        <TextView
                            android:id="@+id/tvPayWallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Pay Via Wallet"
                            android:textSize="@dimen/_13sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relGooglePay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:layout_below="@+id/relPayWallet">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:src="@drawable/logos_google_pay_icon"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/radio_uncheck_gray_icon"/>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textPayBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_below="@+id/cardViewPayment"
                android:background="@drawable/button_bg"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Pay"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>