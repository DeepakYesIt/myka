                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgBackTurnLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:src="@drawable/black_images_back" />

                <ImageView
                    android:id="@+id/imagesLocations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:src="@drawable/img_location_icons" />

                <TextView
                    android:id="@+id/tvTurnOnLocations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagesLocations"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Find stores near you"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tvTurnOnLocationDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTurnOnLocations"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:text="We need your location to find grocery stores nearby for you."
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvTurnNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTurnOnLocationDesc"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:textColor="@color/light_green"
                    android:layout_centerHorizontal="true"
                    android:text="“This will help me give you more accurate\n pricing information”"
                    android:textSize="@dimen/_11sdp" />

                <RelativeLayout
                    android:id="@+id/rlShareLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTurnNotice"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/green_btn_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins"
                        android:paddingVertical="@dimen/_12sdp"
                        android:text="Share Location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

            </RelativeLayout>

